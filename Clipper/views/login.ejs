    <div id="colorlib-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1 animate-box">
                    <%if (data == "1") { %>
                   <form id="login_form" method="post" action="login_check">
                    <h3>Login into the clipper</h3>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="fname">User Id</label>
                            <input type="text" id="username" name="username" class="form-control" placeholder="Your username">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="lname">Password</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Your password">
                        </div>
                    </div>

                    <div class="form-group text-center" >
                        <input type="submit" value="Login" class="btn btn-primary" id ="login_view">
                    </div>

                       <div class="form-group text-center" >
                           <input type="button" value="Sign Up" class="btn btn-primary" id ="signup_page">
                       </div>

                   </form>
                    <% } %>

                    <%if (data == "2") { %>
                    <form id="signup_form" method="post" action="signup_check">
                        <h3>Login into the clipper</h3>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="fname">User Id- signup</label>
                                <input type="text" id="username" name="username" class="form-control" placeholder="Your username">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="lname">Password</label>
                                <input type="password" id="password" name="password" class="form-control" placeholder="Your password">
                            </div>
                        </div>

                        <div class="form-group text-center" >
                            <input type="submit" value="Sign Up" class="btn btn-primary" id ="signup_view">
                        </div>

                        <div class="form-group text-center" >
                            <input type="button" value="Login" class="btn btn-primary" id ="go_login">
                        </div>

                    </form>
                    <% } %>
                    <%if (data == "3") { %>
                        <div class="alert alert__success"><%= "Invalid login" %></div>
                        <div class="form-group text-center" >
                            <input type="button" value="Back to Login" class="btn btn-primary" id ="login_false">
                    </div>
                    <% } %>
                    <%if (data == "4") { %>
                    <div class="alert alert__success"><%= "user already exists" %></div>
                    <div class="form-group text-center" >
                        <input type="button" value="Back to Signup" class="btn btn-primary" id ="signup_false">
                    </div>
                    <% } %>
                </div>

            </div>
        </div>
    </div>


